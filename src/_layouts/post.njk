---
layout: page.njk
---
<article class="c-article">
    <header class="c-article__header">
        <h1 class="c-article__title">{{ title }}</h1>
        <p class="c-article__time"><time datetime="{{ date | dateDisplay('iso') }}" itemprop="datePublished">{{ date | dateDisplay }}</time></p>
    </header>
    <div class="c-article__main">
        {{ content | safe }}
    </div>
    <footer class="c-article__footer">
        <p>
        {% for tag in tags %}
            <span class="c-tag">{{ tag }}</span>
        {% endfor %}
        </p>
    </footer>
</article>
