layout: page.njk
title: Home
permalink: /
---

{% include "widgets/letterboxd.njk" %}
{% include "widgets/goodreads.njk" %}
{% include "widgets/github.njk" %}

{% set posts = collections.posts %}
{% if posts.length > 0 %}
<section class="c-archives">
{% set currentYear = null %}
{% for post in posts %}
    {% set postYear = post.date | dateDisplay('iso') | truncate(4, true, '') %}
    {% if postYear != currentYear %}
        {% if currentYear != null %}</ul>{% endif %}
        {% set currentYear = postYear %}
        <h2 class="c-archives__year" id="{{ currentYear }}-ref">{{ currentYear }}</h2>
        <ul class="c-archives__list">
    {% endif %}
        <li class="c-archives__item">
            <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
            <p>{{ post.date | dateDisplay }}</p>
        </li>
    {% if loop.last %}</ul>{% endif %}
{% endfor %}
</section>
{% endif %}
